# =================================
# Route Optimization Service (ROaaS)
# =================================
# Copy to .env and update values for your environment

# Application
APP_NAME=Route Optimization Service
APP_VERSION=1.0.0
DEBUG=false
ENVIRONMENT=production  # development, staging, production

# Database - CHANGE PASSWORD IN PRODUCTION!
DATABASE_URL=postgresql+asyncpg://routeuser:CHANGE_ME_STRONG_PASSWORD@db:5432/routes

# Redis
REDIS_URL=redis://redis:6379

# External Services
OSRM_URL=http://osrm:5000
VROOM_URL=http://vroom:3000

# Security - CHANGE THESE IN PRODUCTION!
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-super-secret-key-at-least-32-characters-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=7
ALGORITHM=HS256

# API Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_DEFAULT_PER_MINUTE=10
RATE_LIMIT_WINDOW_SECONDS=60

# API Client defaults
API_CLIENT_DEFAULT_TIER=free
API_CLIENT_FREE_RATE_LIMIT=10
API_CLIENT_FREE_MAX_POINTS=50
API_CLIENT_FREE_MONTHLY_QUOTA=1000

# CORS - Add your frontend domains
CORS_ORIGINS=["http://localhost:3000","http://localhost:3001","http://localhost:8080"]

# ERP Integration (optional)
# SMARTUP_API_URL=https://erp.example.com/api
# SMARTUP_API_TOKEN=your-erp-token

