# Application
APP_NAME=Route Optimization Service
APP_VERSION=1.0.0
DEBUG=false

# Database - CHANGE PASSWORD IN PRODUCTION!
DATABASE_URL=postgresql+asyncpg://routeuser:CHANGE_ME_STRONG_PASSWORD@db:5432/routes

# Redis
REDIS_URL=redis://redis:6379

# External Services
OSRM_URL=http://osrm:5000
VROOM_URL=http://vroom:3000

# Security - CHANGE THESE IN PRODUCTION!
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-super-secret-key-at-least-32-characters-change-in-production
